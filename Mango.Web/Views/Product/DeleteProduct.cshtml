@model ProductDto

<form asp-action="DeleteProduct">
    <br />
    <div class="container border bg-primary bg-gradient p-3">
        <h1 class="text-light text-center">Delete Product</h1>
        <input asp-for="ProductId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2 text-light" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2 text-light" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control" disabled />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2 text-light" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" disabled></textarea>
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2 text-light" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" disabled />
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2 text-light" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" disabled />
            </div>
            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


