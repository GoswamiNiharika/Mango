@model IEnumerable<ProductDto>

<div class="card text-white bg-secondary shadow border-0 mt-4">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Products List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a class="btn btn-outline-primary text-light" asp-action="CreateProduct"><i class="bi bi-plus-square"></i> Create New Product</a>
			</div>
		</div>
		<table class="table table-hover">
			<thead>
				<tr class ="text-center">
					<th>
						Name
					</th>
					<th>
						Category Name
					</th>
					<th>
						Price
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var product in Model)
				{
					<tr class="text-center table-secondary">
						<td>
							@product.Name
						</td>
						<td>
							@product.CategoryName
						</td>
						<td>
							@((product.Price).ToString("c"))
						</td>
						<td>
							<a class="btn btn-success" asp-action="EditProduct" asp-route-productId="@product.ProductId">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a class="btn btn-danger" asp-action="DeleteProduct" asp-route-productId="@product.ProductId">
								<i class="bi bi-trash"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>