@model IEnumerable<CouponDto>

<div class="card text-white bg-secondary shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Coupons List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-outline-primary text-light" asp-action="CreateCoupon"><i class="bi bi-plus-square"></i> Create New Coupon</a>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr class="text-center">
                    <th>
                        Coupon Code
                    </th>
                    <th>
                        Discount Amount
                    </th>
                    <th>
                        Minimum Amount
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var coupon in Model)
                {
                <tr class="text-center table-secondary">
                    <td>
                        @coupon.CouponCode
                    </td>
                    <td>
                        @((coupon.DiscountAmount).ToString("c"))
                    </td>
                    <td>
                        @((coupon.MinAmount).ToString("c"))
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="DeleteCoupon" asp-route-couponId="@coupon.CouponId">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
